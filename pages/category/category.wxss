page {
  height: 100%;
}
.yg-category {
  height: 100%;
}
.yg-category .category-containor {
  height: calc( 100vh - 90rpx );
  display: flex;
}
.yg-category .category-containor .left-menu {
  flex: 2;
  height: 100%;
}
.yg-category .category-containor .left-menu .menu-item {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 80rpx;
  font-size: 30rpx;
}
.yg-category .category-containor .left-menu .active {
  color: var(--themeColor);
  border-left: 5rpx solid currentColor;
}
.yg-category .category-containor .right-content {
  height: 100%;
  flex: 5;
}
.yg-category .category-containor .right-content .goods-group .group-title {
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 10rpx;
}
.yg-category .category-containor .right-content .goods-group .group-title .slash {
  color: var(--greyColor);
  padding: 0 10rpx;
}
.yg-category .category-containor .right-content .goods-group .goods-list {
  display: flex;
  flex-wrap: wrap;
}
.yg-category .category-containor .right-content .goods-group .goods-list .group-item {
  width: 33.33%;
  text-align: center;
}
.yg-category .category-containor .right-content .goods-group .goods-list .group-item image {
  width: 50%;
}
